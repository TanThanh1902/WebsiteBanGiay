@model WebsiteBanGiay.Models.Giay

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="tieude">Thêm mới</h2>

@using (Html.BeginForm("Create", "Giays", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class = "control-label col-md-2">Tên giày</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenGiay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenGiay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Hình ảnh</span>
            <div class="col-md-10">
                <input type="file" name="fileimg" class="btn btn-danger" value="@Model.HinhAnhGiay" />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Số lượng</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Giá tiền</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Kích cở</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KichCo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KichCo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Hãng giày</span>
            <div class="col-md-10">
                @Html.DropDownList("MaDanhMuc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiamGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Loại giày Nam/Nữ</span>
            <div class="col-md-10">
                <select name="Phai" class="form-control">
                    <option value="0">Nam</option>
                    <option value="1">Nữ</option>
                    <option value="2">Nam/ Nữ</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Collections</span>
            <div class="col-md-10">
                <select name="Collection" class="form-control">
                    <option value="1">Collection</option>
                    <option value="0">Không</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left: 70%">
                <input type="submit" value="Thêm" class="btn btn-success" />
            </div>
        </div>
    </div>
}
