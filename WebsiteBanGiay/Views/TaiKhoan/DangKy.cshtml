@model WebsiteBanGiay.Models.KhachHang


<div class="modal fade" id="dangky" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Html.BeginForm("DangKy", "TaiKhoan", FormMethod.Post))
            {
                <hr />
                <h2 style="text-align:center; color: red">Đăng ký tài khoản</h2>
                <hr />
                @Html.AntiForgeryToken()

        <div class="container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="margin-left: 5%">
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="TenKhachHang" style="width: 50%" placeholder="Tên khách hàng" required />
                    </div>
                </div>
                <br /><br /><br />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="tel" name="SoDienThoai" class="form-control" style="width: 50%" placeholder="Số điện thoại" required />
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%", @placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%", @placeholder = "Địa chỉ" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%", @placeholder = "Mật khẩu" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="password" placeholder="Nhập lại mật khẩu" class="form-control" required style="width: 50%" />
                    </div>
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-left: 20%">
                    <input type="submit" value="Đăng ký" class="btn btn-danger" />
                </div>
            </div>
            <br /><br />
        </div>
            }
        </div>
    </div>
</div>
